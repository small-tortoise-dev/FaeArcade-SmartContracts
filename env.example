# FAE Arcade Treasury - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# TON NETWORK CONFIGURATION
# =============================================================================
NETWORK=testnet
# Options: testnet, mainnet

# TON Network Endpoints
TON_MAINNET_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_TESTNET_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC

# TON Center API Key (get from https://toncenter.com/)
TONCENTER_API_KEY=your_api_key_here

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# Your wallet mnemonic phrase (24 words)
MNEMONIC="your wallet mnemonic phrase here"

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================
# Treasury contract address (will be set after deployment)
TREASURY_ADDRESS=EQ...your_treasury_address

# =============================================================================
# OPERATIONAL SETTINGS
# =============================================================================
# Default gas limit for transactions
DEFAULT_GAS_LIMIT=10000000

# Default transaction timeout (seconds)
TRANSACTION_TIMEOUT=60

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging
DEBUG=false

# Test wallet balance (for development)
TEST_WALLET_BALANCE=10 